      <div class="navbar-menu">
        <a href="#">Home</a>
        <a href="#about">Go Back</a>
      </div>
    </div>
  </nav>

  <!-- Contact -->
  <section id="contact">
    <h1 class="section-title">Post A fit</h1>
    <div class="inner-width">
      <div class="contact-info">
        <div class="buttons">
          <img src="./img/images/image 2.png" id="fitpicpreview" alt="" class="about-pic"><br>
        </div>
      <form action="/postfit" method="post" class="contact-form" enctype="multipart/form-data">
        <textarea required class="messageZone" placeholder="What's in your mind." name="message"></textarea>
        <input
        type="file"
        name="fitpic"
        id="fitpic"
      />
        <input type="submit" value="&nbsp; Post &nbsp;" class="btn">
      </form>
    </div>
  </section>

  <!-- Footer -->

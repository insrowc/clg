<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>vfindfit - Notification</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      body {
        font-family: sans-serif;
      }
      .user-details {
        height: 80px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 1rem;
        background-color: #fd5f03e0;
        color: white;
        text-align: right;
      }
      .user-details img {
        height: 70px;
        object-fit: contain;
        border: 3px solid white;
        border-radius: 50%;
      }
      .user-details h2 {
        font-weight: bold;
        letter-spacing: 3px;
        font-family: "Gill Sans", "Gill Sans MT", Calibri, "Trebuchet MS",
          sans-serif;
      }
      .notification {
        display: flex;
        align-items: flex-start;
        justify-content: flex-start;
        padding: 1rem;
        border-bottom: 1px solid lightgray;
      }
      .notification > div.img {
        margin-right: 1.5rem;
        width: 60px;
      }
      .notification img {
        width: 100%;
      }
    </style>
  </head>
  <body>
    <!-- user details -->
    <div class="user-details">
      <img src="./img/batman.png" alt="" />
      <div>
        <h2>Username</h2>
        <p>college name</p>
      </div>
    </div>
    <!-- all notifiction -->
    <div class="all-notification"></div>
    <!-- get notificatin script -->
    <script>
      fetch("/getnotifications")
        .then((res) => res.json())
        .then((res) => {
          if (res) {
            res.likes.map((username) => {
              let notification = `
                    <div class="notification">
                        <div class="img">

                        </div>
                        <div class="content">
                            <p>
                               <b>${username}</b> likes your Fit
                            </p>
                        </div>
                    </div>
                    `;
              document
                .querySelector(".all-notification")
                .insertAdjacentHTML("beforebegin", notification);
            });
          }
        })
        .catch((err) => {
          console.log(err);
        });
    </script>
  </body>
</html>
